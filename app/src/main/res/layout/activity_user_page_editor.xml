<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blueback2"
    tools:context="com.example.henry.abaglobal.UserPageEditorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/user_profile_image_setup"
              android:layout_width="140dp"
              android:layout_height="140dp"
              android:layout_alignParentTop="true"
              android:layout_centerVertical="true"
              android:layout_marginTop="25dp"
              android:layout_marginLeft="10dp"
              android:src="@drawable/userrs"
              app:civ_border_color="#303393"
              app:civ_border_width="1dp" />
          <TextView
              android:id="@+id/display_name"
              android:layout_width="wrap_content"
              android:layout_height="40dp"
              android:hint="Display Name"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="20dp"
              android:textStyle="bold"
              android:textSize="20dp"
              android:textColor="#000"
              />
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_business_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Name Of Business" />

            <EditText
                android:id="@+id/et_business_location"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Business Location" />

            <EditText
                android:id="@+id/et_website"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Business Website"
                android:inputType="textWebEmailAddress"/>

            <EditText
                android:id="@+id/et_user_email_setup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:inputType="textWebEmailAddress"
                android:padding="4dp"
                android:text="Email" />

            <EditText
                android:id="@+id/et_facebook"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Facebook Page" />

            <EditText
                android:id="@+id/et_twitter"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Twitter" />

            <EditText
                android:id="@+id/et_instagram"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Instagram" />

            <EditText
                android:id="@+id/et_product_type"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Product" />

            <EditText
                android:id="@+id/et_keywordforsearch"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Key word for search"
                android:inputType="textAutoCorrect"/>

            <EditText
                android:id="@+id/et_status"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_input1"
                android:padding="4dp"
                android:text="Status "
                android:inputType="textMultiLine"/>

            <CheckBox
                android:id="@+id/like_to_optimize_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="would you like to optimize search for your page?" />

            <Button
                android:id="@+id/btn_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/blueback"
                android:text="Publish" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
